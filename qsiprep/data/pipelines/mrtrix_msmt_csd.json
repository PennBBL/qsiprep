{
  "name": "mrtrix_msmt",
  "space": "T1w",
  "atlases": ["schaefer100", "schaefer200"],
  "anatomical": [
    "mrtrix_5tt"
  ],
  "nodes": [
    {
      "name": "msmt_csd",
      "software": "MRTrix3",
      "action": "csd",
      "output_suffix": "msmtcsd",
      "input": "qsiprep",
      "parameters": {
        "response": {
          "algorithm": "msmt_5tt"
        },
        "fod": {
          "algorithm": "msmt_csd",
          "max_sh": [4, 8, 8]
        }
      }
    },
    {
      "name": "track_ifod2",
      "software": "MRTrix3",
      "action": "tractography",
      "output_suffix": "ifod2",
      "input": "msmt_csd",
      "parameters": {
        "use_5tt": true,
        "tckgen":{
          "algorithm": "SD_Stream",
          "select": 10000,
          "n_trials": 10}
      }
    },
    {
      "name": "global_tractography",
      "software": "MRTrix3",
      "action": "global_tractography",
      "output_suffix": "tckglobal",
      "input": "msmt_csd",
      "parameters": {
        "niter": 1000
      }
    },
    {
      "name": "mrtrix_conn",
      "software": "MRTrix3",
      "action": "connectivity",
      "output_suffix": "msmtconnectome",
      "input": "track_ifod2",
      "parameters":{
        "tck2connectome": {
          "zero_diagonal":false,
          "search_radius": 2.0
        }
      }
    },
    {
      "name": "mrtrix_invlen_conn",
      "software": "MRTrix3",
      "action": "connectivity",
      "output_suffix": "msmtinvlenconnectome",
      "input": "track_ifod2",
      "parameters":{
        "tck2connectome": {
          "zero_diagonal":false,
          "search_radius": 2.0,
          "scale_invnodevol": true,
          "symmetric": true
        }
      }
    }
  ]
}
