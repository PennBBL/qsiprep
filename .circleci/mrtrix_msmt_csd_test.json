      "parameters":{
        "use_sift_weights": true,
        "tck2connectome": {
          "zero_diagonal":false,
          "search_radius": 2.0
        }
      }
    },
    {
      "name": "mrtrix_invlen_conn",
      "software": "MRTrix3",
      "action": "connectivity",
      "output_suffix": "msmtinvlenconnectome",
